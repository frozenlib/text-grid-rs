{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cargo build",
            "command": "cargo",
            "args": [
                "build",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "clear": true,
            }
        },
        {
            "type": "cargo",
            "label": "cargo test",
            "command": "cargo",
            "args": [
                "test"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "panel": "dedicated",
                "clear": true,
            }
        },
        {
            "type": "shell",
            "label": "cargo run exmaple",
            "command": "cargo",
            "args": [
                "run",
                "--example",
                "${fileBasenameNoExtension}",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "panel": "dedicated",
                "clear": true,
            }
        },
        {
            "type": "shell",
            "label": "cargo doc open",
            "command": "cargo",
            "args": [
                "doc",
                "--open",
                "--no-deps",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "panel": "dedicated",
                "clear": true,
            }
        },
        {
            "type": "shell",
            "label": "cargo doc",
            "command": "cargo",
            "args": [
                "doc",
                "--no-deps",
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "panel": "dedicated",
                "clear": true,
            }
        },
    ]
}